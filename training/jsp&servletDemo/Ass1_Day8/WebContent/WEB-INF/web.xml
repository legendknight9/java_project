<web-app>
  <display-name>Ass1_Day8</display-name>
  
  <filter>
    <filter-name>filter</filter-name>
    <filter-class>nhutlt.servlet.filter</filter-class>
    <init-param>
    	<param-name>allowedpage</param-name>
    	<param-value>index.html Ass1_Day8</param-value>
    </init-param>
  </filter>
  <filter-mapping>
    <filter-name>filter</filter-name>   
    <url-pattern>/submit</url-pattern>
  </filter-mapping>
  
  <servlet>
    <servlet-name>submit</servlet-name>
    <servlet-class>nhutlt.servlet.SubmitServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>submit</servlet-name>
    <url-pattern>/submit</url-pattern>    
  </servlet-mapping>
  
  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
  </welcome-file-list>
</web-app>